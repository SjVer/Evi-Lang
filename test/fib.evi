#apply "std-io"

@fib i32 () {
	\ initialize first and second terms
	%t1, t2 i32 0, 1;

	\ initialize the next term (3rd term)
	%tn i32 $t1 + $t2;

	\ get no. of terms from user
	\ prints("Enter the number of terms: ");
	%n i32 scani();

	\ print the first two terms t1 and t2
	\ printf("Fibonacci Series: %d, %d, ", $t1, $t2);
	\ prints("Fibbonaci Series: ");
	printi($t1);
	printi($t2);

	\ print 3rd to nth terms
  	!!(%i i32 3; $i <= $n; =i ++$i;) {
	    printi($tn);
	    \ printf("%d, ", $tn);
	    =t1 $t2;
	    =t2 $tn;
	    =tn $t1 + $t2;
	}
}

@main i32 () fib();
