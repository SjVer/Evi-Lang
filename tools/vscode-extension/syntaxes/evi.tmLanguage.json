{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Evi",
	"scopeName": "source.evi",
	"patterns": [
		{ "include": "#comments" }
	],
	"repository": {
		"comments": {
			"name": "comment.evi",
			"patterns": [
				{
					"name": "comment.line.evi",
					"match": ";.*$"
				},
				{
					"name": "comment.block.evi",
					"begin": ";=",
					"end": "=;"
				}
			]
		}
	}
}
