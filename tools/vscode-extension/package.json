{
    "name": "evi-lang",
    "displayName": "Evi-Lang",
    "description": "Evi syntax highlighting extension",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver-textdocument": "^1.0.1"
    },


    "categories": [
        "Programming Languages", "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "evi",
            "aliases": ["Evi", "evi"],
            "extensions": [".evi", ".evii"],
            "configuration": "./syntaxes/language-configuration.json"
        }],
        "grammars": [{
            "language": "evi",
            "scopeName": "source.evi",
            "path": "./syntaxes/evi.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "evi",
                "path": "./syntaxes/evi.code-snippets"
            }
        ],
        "configuration":[
            {
                "title": "Evi",
                "properties": {
                    "Evi.EviExecutablePath": {
                        "type": "string",
                        "default": "/usr/bin/evi",
                        "description": "The path to the Evi executable (/usr/bin/evi by default)"
                    }
                }
            }
        ]
    }
}